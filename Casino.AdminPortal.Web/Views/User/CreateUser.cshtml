@model Casino.AdminPortal.Web.Models.UserModel

@{
    ViewBag.Title = "Create User";
}
<br />
<br />
<br />
<div class="col-md-6 col-md-offset-3">
@using (Html.BeginForm("CreateUser", "User", FormMethod.Post,  new { enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel panel-heading"><h1>Create User</h1></div>
        <div class="panel-body">
           
            <div class="form-group ">
                <div class="input-group">
                    <span class="input-group-addon">Name</span>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                   
                </div>
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group ">
                <div class="input-group">
                    <span class="input-group-addon">Date of Birth</span>
                    @Html.TextBoxFor(model => model.DateOfBirth, new { @type = "Date", @class = "form-control" })
                    </div>
                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Contact Number</span>
                        @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control" })
                        </div>
                    @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger" })
                    </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Email Id</span>
                        @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                        </div>
                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                    </div>
            <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">Identity Proof</span>
                <span class="pull-right">
                <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" required />
                    </span>
               
                </div>
   
            </div>
                <button type="submit" class="btn btn-success ">Submit</button>
            </div>
        </div>
}
</div>